{
  "name": "cv-git",
  "version": "0.4.24",
  "description": "AI-Native Paired-Programming + Knowledge-Graph Version Control Layer",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "node tests/run-all.mjs",
    "test:integration": "node tests/run-all.mjs",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:html": "vitest run --coverage && echo 'Coverage report available at ./coverage/index.html'",
    "benchmark": "node tests/benchmarks/run-benchmark.mjs",
    "benchmark:full": "node tests/benchmarks/comprehensive-benchmark.mjs",
    "benchmark:json": "node tests/benchmarks/comprehensive-benchmark.mjs --json",
    "benchmark:compare": "node tests/benchmarks/comprehensive-benchmark.mjs --compare",
    "benchmark:baseline": "node tests/benchmarks/comprehensive-benchmark.mjs --save-baseline",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules coverage",
    "cv": "node packages/cli/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "git",
    "ai",
    "knowledge-graph",
    "developer-tools",
    "cli"
  ],
  "author": "CV-Git Contributors",
  "license": "MIT",
  "dependencies": {
    "keytar": "7.9.0"
  },
  "optionalDependencies": {
    "tree-sitter": "npm:@keqingmoe/tree-sitter@^0.26.2",
    "tree-sitter-go": "^0.21.2",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.1",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2"
  }
}
